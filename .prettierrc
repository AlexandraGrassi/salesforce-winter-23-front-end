{
  "trailingComma": "none",
  "tabWidth": 4,
  "useTabs": true,
  "endOfLine": "lf",
  "printWidth": 145,
  "overrides": [{
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    }, {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    }, {
      "files": "*.{trigger,cls,apex}"
    }
  ]
}
